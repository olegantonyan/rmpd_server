- collection = present_collection(collection)
%table.table.table-condensed
  %tr
    %th= localized_heading(collection, :email)
    %th= localized_heading(collection, :user)
    %th= localized_heading(collection, :created_at)
    %th= localized_heading(collection, :accepted)
    %th
  - collection.each do |i|
    %tr
      %td= i.email
      %td= i.user
      %td= i.created_at
      %td= i.accepted
      %td
        - if policy_presenter(i).destroy?
          .pull-right= link_to icon_text('remove', i.model.accepted ? t('views.invites.delete', default: 'Delete') : t('views.invites.cancel', default: 'Cancel')), company_invite_path(i.company, i), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: t('views.shared.are_you_sure', default: 'Are you sure?') }
