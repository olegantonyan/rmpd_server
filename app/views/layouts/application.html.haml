!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    /%title= content_for?(:title) ? yield(:title) : "Remote Media Player Server"
    %title= "Remote Media Player Server" + (content_for?(:title) ? " | " + yield(:title) : "") 
    %meta{:content => content_for?(:description) ? yield(:description) : "App_Name", :name => "description"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = yield(:head)
  %body
    #main{:role => "main"}
      %nav.navbar.navbar-inverse{:role => "navigation"}
        .container
          = link_to "Main", root_path, class: "navbar-brand"
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                %a{:href => devices_path} 
                  %strong Devices
              %li
                %a{:href => media_items_path}
                  %strong Media files
              %li
                %a{:href => "#"}
                  %strong Playlists
            
      .container
        .content
          .row
            .col-md-12
              = render 'layouts/messages'
              = yield
          %footer
            .navbar-fixed-bottom.row
              .container
                .col-md-12 Footer status bar
