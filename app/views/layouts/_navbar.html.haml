%nav.navbar.navbar-inverse{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button{type: 'button', class: 'navbar-toggle collapsed', data: {toggle: 'collapse', target: '#bs-navbar-1' }, 'aria-expanded' => 'false'}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = image_tag 'logo.png', alt: 'logo', class: 'navbar-brand img-responsive'
      = link_to app_title, root_path, class: 'navbar-brand'
    #bs-navbar-1.collapse.navbar-collapse
      = render 'layouts/navbar_menu'
      %ul.nav.navbar-right.nav
        %li
        - if user_signed_in?
          = succeed '.' do
            %span{title: 'Gravatar'}
              = image_tag current_user.gravatar_url, size: "32x32", alt: 'gravatar', class: 'img-rounded'
            %span{title: t('views.shared.my_account', default: 'My account')}
              = link_to icon_text('user', current_user.to_s), edit_user_registration_path, class: 'btn btn-success navbar-btn'
            %span{title: t('views.shared.logout', default: 'Logout')}
              = link_to icon_text('sign-out', ''), destroy_user_session_path, method: :delete, class: 'btn btn-warning navbar-btn'
        - else
          = link_to icon_text('user-plus', t('views.shared.sign_up', default: 'Sign up')), new_user_registration_path, class: 'btn btn-default navbar-btn'
          = link_to icon_text('sign-in', t('views.shared.login', default: 'Login')), new_user_session_path, class: 'btn btn-success navbar-btn'
