- unless current_user.nil?
  - if many_companies? || current_user.root?
    = f.select :company_id, policy_scope(Company).map{ |p| ["#{p.title}", p.id] }, {}, id: 'select-company'
    = select2js_for_id "select-company"
  - else
    = f.hidden_field :company_id, value: current_user.companies.first.try(:id)
