<% content_for :page_title, t('views.tags.edit_title') %>

<div class="columns">
  <div class="column is-narrow">
    <%= link_to(:back, class: "button") do %>
      <span class="icon"><i class="fas fa-angle-left "></i></span>
      <span><%= t('views.back') %></span>
    <% end %>
  </div>

  <div class="column">
    <h1 class="title"><%= yield(:page_title) %></h1>
  </div>
</div>


<div class="columns">
  <div class="column">
  </div>

  <div class="column">
    <div class="section">
      <%= form_with(model: @tag) do |f| %>
        <div class="field">
          <%= f.label :name, class: "label" %>
          <div class="control">
            <%= f.text_field :name, autofocus: true, class: "input" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit t('views.save'), class: "button is-link" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="column">
  </div>
</div>
