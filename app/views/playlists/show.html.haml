= page_title(@playlist)
- playlist = present(@playlist)

= render partial: 'shared/show', locals: { object: playlist,
  edit_path: edit_playlist_path(playlist),
  destroy_path: playlist_path(playlist),
  attrs: [{attr: :name},
          {attr: :description},
          {attr: :shuffle},
          {attr: :company},
          {attr: :media_items_and_size },
          {attr: :devices} ] }

= tag :br

%h4= MediaItem.human_enum_name(:background)
- playlist_items = present_collection(playlist.playlist_items_background)
= render partial: 'shared/list', locals: { collection: playlist_items,
  columns: [{attr: :position, heading: '#'},
            {attr: :file_identifier},
            {attr: :description},
            {attr: :size},
            {attr: :begin_time},
            {attr: :end_time},
            {attr: :begin_date},
            {attr: :end_date} ],
  details_link: -> (i) { playlist_playlist_item_path(playlist, i) } }

%h4= MediaItem.human_enum_name(:advertising)
- playlist_items = present_collection(playlist.playlist_items_advertising)
= render partial: 'shared/list', locals: { collection: playlist_items,
  columns: [{attr: :file_identifier},
            {attr: :description},
            {attr: :size},
            {attr: :begin_time},
            {attr: :end_time},
            {attr: :playbacks_per_day},
            {attr: :begin_date},
            {attr: :end_date} ],
  details_link: -> (i) { playlist_playlist_item_path(playlist, i) } }
