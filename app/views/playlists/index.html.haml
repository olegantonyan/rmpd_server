- title "Playlists"
  
%h1= yield(:title)

.row
  .col-md-12
    %table.table.table-striped.table-bordered.table-hover.table-responsive.table-condensed
      %tr
        %th Name
        %th Description
        %th Media items
        %th Devices
        %th More
    
      - @playlists.each do |playlist|
        %tr
          %td= playlist.name
          %td= playlist.description
          %td= playlist.media_items.count
          %td= playlist.devices.count
          %td
            .btn-group
              %button.btn.dropdown-toggle.btn-default{"type" => "button", "data-toggle" => "dropdown"}
                %span.glyphicon.glyphicon-list
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Info', playlist
                %li= link_to 'Edit', edit_playlist_path(playlist)
                %li= link_to 'Delete', playlist, :method => :delete, :data => { :confirm => 'Are you sure?' }
    
    = link_to 'Create new playlist', new_playlist_path, class: "btn btn-primary"
    
