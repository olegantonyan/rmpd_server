- title t(:playlists_title)
  
%h1= yield(:title)

.row
  .col-md-12
    %table.table.table-striped.table-bordered.table-hover.table-responsive.table-condensed
      %tr
        %th= t(:playlist_name_th)
        %th= t(:description_th)
        %th= t(:media_items_title) + " / " + t(:size_th)
        %th= t(:devices_title)
        %th= t(:more_th)
    
      - @playlists.each do |playlist|
        %tr
          %td= playlist.name
          %td= playlist.description
          %td= playlist.media_items.count.to_s + " / " + number_to_human_size((playlist.media_items.inject(0) {|sum, i| sum += i.file.size.to_i}), precision: 2)
          %td= playlist.devices.count
          %td
            .btn-group
              %button.btn.dropdown-toggle.btn-default{"type" => "button", "data-toggle" => "dropdown"}
                %span.glyphicon.glyphicon-list
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to t(:info_text), playlist
                %li= link_to t(:edit_text), edit_playlist_path(playlist)
                %li= link_to t(:delete_text), playlist, :method => :delete, :data => { :confirm => t(:are_you_sure) }
    
    = link_to t(:create_playlist_text), new_playlist_path, class: "btn btn-primary"
    
