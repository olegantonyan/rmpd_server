<% content_for :page_title, t('.sign_in') %>

<h1 class="title has-text-centered"><%= yield(:page_title) %></h1>

<div class="columns">
  <div class="column">
  </div>

  <div class="column">
    <div class="section">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "checkbox" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t('.sign_in'), class: "button is-link" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

  <div class="column">
  </div>
</div>
