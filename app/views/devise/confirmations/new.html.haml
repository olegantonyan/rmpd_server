- content_for :page_title, t('.resend_confirmation_instructions', default: 'Resend confirmation instructions')

= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form' }) do |f|
  = f.input :email, required: true, autofocus: true
  = f.button :submit, t('.resend_confirmation_instructions', default: 'Resend confirmation instructions')
= render 'devise/shared/links'
