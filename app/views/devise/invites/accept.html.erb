<% content_for :page_title, t('views.companies.invites.index_title') %>

<div class="section">
  <% if @invite.company.includes_user?(@user) %>
    <%= t('views.companies.invites.already_in_the_company') %>
    <div>
      <%= link_to(t('views.home_page'), root_path) %>
    </div>
  <% else %>
    <%= @invite.company.to_s %>
    <div>
      <%= link_to(t('views.companies.invites.accept_invite'), users_sign_up_via_invite_accept_path(invitation_token: params[:invitation_token]), method: :post, class: 'button is-primary is-outlined') %>
    </div>
  <% end %>
</div>
