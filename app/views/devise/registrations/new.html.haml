- content_for :page_title, t('.sign_up', default: 'Sign up')

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f|
  = f.input :email, autofocus: true, required: true
  = f.input :allow_notifications
  = f.input :displayed_name
  = f.input :password, required: true
  = f.input :password_confirmation, required: true
  = f.button :submit, t('.sign_up', default: 'Sign up')
= render 'devise/shared/links'
