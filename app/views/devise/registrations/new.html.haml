- content_for :page_title, t('.sign_up', default: 'Sign up')

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f|
  - if resource.invite
    = f.input :invitation_token, as: :hidden, input_html: { value: resource.invite.token }
    = f.input :email, autofocus: true, required: true, readonly: true, input_html: { value: resource.invite.email }, hint: "invited by #{resource.invite.user} to #{resource.invite.company}"
  - else
    = f.input :email, autofocus: true, required: true
  = f.input :password, required: true
  = f.input :password_confirmation, required: true
  = f.input :allow_notifications
  = f.input :displayed_name
  - unless resource.invite
    = f.input :company_title
  = f.button :submit, t('.sign_up', default: 'Sign up')
= render 'devise/shared/links'
