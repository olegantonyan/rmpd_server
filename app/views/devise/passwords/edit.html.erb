<% content_for :page_title, t('.change_your_password') %>

<h1 class="title has-text-centered"><%= yield(:page_title) %></h1>

<div class="columns">
  <div class="column">
  </div>

  <div class="column">
    <div class="section">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, t('.new_password'), class: "label" %><br />
          <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
          <div class="control">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('.confirm_new_password'), class: "label" %>
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit t('.change_my_password'), class: "button is-link" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

  <div class="column">
  </div>
</div>
