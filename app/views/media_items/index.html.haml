= page_title(@media_items)

= render_filter_form do |f|
  = filter_form_search_query(f)
  = filter_form_select(f, :with_company_id) if current_user_has_many_companies?
  = filter_form_select(f, :with_type, label: MediaItem.human_attribute_name(:type))
  = filter_form_select(f, :with_file_processing, label: MediaItem.human_attribute_name(:file_processing))

= render 'collection'
