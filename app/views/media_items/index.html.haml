- title t(:media_items_title)
  
%h1.page-header= yield(:title)


= form_for_filterrific @filterrific, class: 'form-horizontal' do |f|
  = f.text_field :search_query, :class => 'filterrific-periodically-observed form-control', :placeholder => t(:search)
= render_filterrific_spinner
= link_to t(:reset_filter), reset_filterrific_url

= render partial: 'list', locals: {media_items: @media_items}
    
= link_to icon_link_to('glyphicon-cloud-upload', t(:upload_new_files_text)), new_media_item_path, class: "btn btn-primary"
    