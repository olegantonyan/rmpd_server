<% content_for :page_title, t('views.media_items.index_title') %>

<div class="columns">
  <div class="column">
    <h1 class="title"><%= yield(:page_title) %></h1>
  </div>

  <div class="column">
    <% if policy(:media_item).new? %>
      <%= link_to(new_media_item_path, class: "button is-primary is-outlined is-pulled-right") do %>
        <span class="icon"><i class="fas fa-cloud-upload-alt"></i></span>
        <span><%= t('views.media_items.upload_files') %></span>
      <% end %>
    <% end %>

    <% if policy(:tag).new? %>
      <%= link_to(tags_path, class: "button is-outlined is-pulled-right") do %>
        <span class="icon"><i class="fas fa-tags"></i></span>
        <span><%= t('views.tags.manage') %></span>
      <% end %>
    <% end %>
  </div>
</div>

<% content_for(:js) do %>
  <%= javascript_packs_with_chunks_tag 'application', 'media_items' %>
<% end %>

<div id="root_component"></div>

<% if current_user.root? %>
  <div class="section">
    <h3 class="title is-3">Area 51</h3>

    <div class="column is-narrow">
      <%= link_to(media_items_path(format: :csv), class: "button") do %>
        <span class="icon"><i class="fas fa-download"></i></span>
        <span>CSV</span>
      <% end %>
    </div>
  </div>
<% end %>
