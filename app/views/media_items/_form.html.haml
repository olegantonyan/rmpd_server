- bulk = bulk || false

= bootstrap_form_for(@media_item, url: (bulk ? bulk_create_media_items_path : media_items_path(@media_item)), :html => {:multipart => true, :id => 'fileupload-form'}, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
  = f.text_field :description
  = f.file_field :file, multiple: bulk, label: (bulk ? t(:files) : t(:file))
  = render partial: 'shared/select_company_form', locals: {:f => f}
  = f.submit :value => t(:upload_button_text), :class => "btn btn-primary"
  
/= render partial: 'jquery_upload_form', locals: {object: @media_item}
