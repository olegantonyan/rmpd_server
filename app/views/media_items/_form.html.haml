= form_for @media_item, :html => {:multipart => true} do |f|
  - if @media_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@media_item.errors.count, "error")} prohibited this media_item from being saved:"
      %ul
        - @media_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :file
    = f.file_field :file
  .actions
    = f.submit 'Save'
