= bootstrap_form_for(@device) do |f|
  - if !defined?(login_edit_disable) || login_edit_disable == false
    = f.text_field :login
    = f.password_field :password
    = f.password_field :password_confirmation
    
  = f.text_field :name
  = f.select :playlist_id, @playlists.map{ |p| ["#{p.name} (#{p.description})", p.id] }, {}, :id => "select-playlist"
  = select2js_for_id "select-playlist"
  = f.primary 'Save'

