= form_for @device, :html => {:role => "form"} do |f|
  - if @device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
      %ul
        - @device.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    .field
      = f.label :serial_number
      = f.text_field :serial_number, :class => "form-control"
    .field
      = f.label :name
      = f.text_field :name, :class => "form-control"
    .field
      = f.label :playlist
      = f.select :playlist_id, @playlists.map{ |p| ["#{p.name} (#{p.description})", p.id] }, {}, :class => "form-control", :id => "select-playlist"
      = select2js_for_id "select-playlist"
    .actions
      = f.submit 'Save', :class => "btn btn-primary"
