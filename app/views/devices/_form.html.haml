= simple_form_for resource do |f|
  - if resource.new_record?
    = f.input :login
    = f.input :password
    = f.input :password_confirmation

  = f.input :name
  - device_groups = policy_scope(Device::Group.order(title: :asc))
  = f.association :device_groups, collection: device_groups, as: :check_boxes unless device_groups.empty?
  = render partial: 'shared/select_company_form', locals: {:f => f}
  = f.input :time_zone, input_html: { id: 'select-timezone' }
  .row
    .col-sm-4
      = f.input :wallpaper, as: :file
      = f.input :wallpaper_cache, as: :hidden
    .col-sm-8
      - if resource.wallpaper&.thumb&.url.present?
        = image_tag(resource.wallpaper.thumb.url, size: '100x100', class: 'img img-thumbnail')
        = f.check_box :remove_wallpaper
        = f.label :remove_wallpaper, t('views.devices.remove_wallpaper', default: 'Remove this image')
  = f.button :submit

= select2js_for_id('select-timezone')
