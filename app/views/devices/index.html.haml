- title "Devices"
  
%h1= yield(:title)

.row
  .col-md-12  
    %table.table.table-striped.table-bordered.table-hover.table-responsive
      %tr
        %th Name
        %th Serial number
        %th Playlist
        %th More
    
      - @devices.each do |device|
        %tr{:class => device_online?(device) ? "success" : "danger"}
          %td= device.name
          %td= device.serial_number
          %td= device.playlist.to_s
          %td
            .btn-group
              %button.btn.dropdown-toggle.btn-default{"type" => "button", "data-toggle" => "dropdown"}
                %span.glyphicon.glyphicon-list
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Info', device
                %li= link_to 'Edit', edit_device_path(device)
    
    
    = link_to 'Manually add new device', new_device_path, class: "btn btn-primary"

