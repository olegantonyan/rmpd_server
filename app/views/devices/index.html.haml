- title "List devices"
  
%h1= yield(:title)
          
%table.table.table-striped.table-bordered.table-hover.table-responsive
  %tr
    %th Login
    %th Name
    %th One
    %th Two 
    %th Three

  - @devices.each do |device|
    %tr
      %td= device.login
      %td= device.name
      %td= link_to 'Show', device
      %td= link_to 'Edit', edit_device_path(device)
      %td= link_to 'Destroy', device, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Device', new_device_path, class: "btn btn-warning"

