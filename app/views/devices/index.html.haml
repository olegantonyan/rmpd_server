- title "Devices"
  
%h1= yield(:title)

.row
  .col-md-12  
    %table.table.table-striped.table-bordered.table-hover.table-responsive
      %tr
        %th Name
        %th Serial number
        %th Playlist
        %th More
    
      - @devices.each do |device|
        %tr{:class => device_online?(device) ? "success" : "danger"}
          %td= device.name
          %td= device.serial_number
          %td= device.playlist.name if device.playlist
          %td
            = link_to content_tag(:span, "", :class => "glyphicon glyphicon-list"), device, :class => "btn btn-default"
    
    = link_to 'Manually add new device', new_device_path, class: "btn btn-primary"

